BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            font_size: 48
            Button:
                font_size: 42
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                font_size: 42
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        font_size: 42
        text: 'Convert m to km'
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)
